# ============================================================================
# Laravel Base Project - Environment Variables
# ============================================================================
# Bu dosya projenin tüm environment variable'larını içerir.
# Yeni proje kurulumunda bu dosyayı .env olarak kopyalayın ve değerleri doldurun.
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

APP_NAME="Laravel Base Project"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Locale Settings
APP_LOCALE=tr
APP_FALLBACK_LOCALE=tr
APP_FAKER_LOCALE=tr_TR

# Maintenance Mode
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Performance Settings
APP_PREVENT_LAZY_LOADING=true
APP_PREVIOUS_KEYS=

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=laravel_base_project
DB_USERNAME=root
DB_PASSWORD=

# Database Options
DB_URL=
DB_SOCKET=
DB_FOREIGN_KEYS=true
DB_PERSISTENT=true

# Database Cache (Cache için ayrı connection)
DB_CACHE_CONNECTION=
DB_CACHE_TABLE=cache
DB_CACHE_LOCK_CONNECTION=
DB_CACHE_LOCK_TABLE=

# Database Queue
DB_QUEUE_CONNECTION=
DB_QUEUE_TABLE=jobs
DB_QUEUE=default
DB_QUEUE_RETRY_AFTER=90

# Slow Query Monitoring
DB_SLOW_QUERY_THRESHOLD_MS=500
DB_SLOW_QUERY_LIMIT=50

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis Client: phpredis (önerilen, daha hızlı) veya predis (pure PHP)
# phpredis kurulu değilse otomatik olarak predis kullanılır
REDIS_CLIENT=phpredis
REDIS_URL=
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_USERNAME=

# Redis Options
REDIS_CLUSTER=redis
REDIS_PREFIX=
REDIS_PERSISTENT=true

# Redis Databases
REDIS_DB=0
REDIS_CACHE_DB=1

# Redis Connection Options
REDIS_MAX_RETRIES=3
REDIS_BACKOFF_ALGORITHM=decorrelated_jitter
REDIS_BACKOFF_BASE=100
REDIS_BACKOFF_CAP=1000
REDIS_TIMEOUT=60

# Redis Queue
REDIS_QUEUE_CONNECTION=default
REDIS_QUEUE=default
REDIS_QUEUE_RETRY_AFTER=90

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

CACHE_STORE=redis
CACHE_PREFIX=

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_STORE=redis
SESSION_CONNECTION=
SESSION_TABLE=sessions
SESSION_SECURE_COOKIE=
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax
SESSION_PARTITIONED_COOKIE=false

# ============================================================================
# QUEUE CONFIGURATION
# ============================================================================

# Redis önerilir: Octane + performans için ideal
# Database: Redis yoksa kullanılabilir, ama daha yavaş
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# Beanstalkd Queue
BEANSTALKD_QUEUE_HOST=localhost
BEANSTALKD_QUEUE=default
BEANSTALKD_QUEUE_RETRY_AFTER=90

# SQS Queue
SQS_PREFIX=
SQS_QUEUE=default
SQS_SUFFIX=

# ============================================================================
# MAIL CONFIGURATION
# ============================================================================

MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================================================
# BROADCASTING CONFIGURATION
# ============================================================================

BROADCAST_CONNECTION=reverb

# ============================================================================
# REVERB CONFIGURATION (WebSocket Server)
# ============================================================================

REVERB_SERVER=reverb
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_HOST=localhost
REVERB_PORT=443
REVERB_SCHEME=https
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_SCALING_ENABLED=false

# Frontend için Reverb değişkenleri
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# ============================================================================
# OCTANE CONFIGURATION
# ============================================================================

OCTANE_SERVER=frankenphp
OCTANE_HTTPS=false
OCTANE_WORKERS=auto
OCTANE_TASK_WORKERS=auto
OCTANE_MAX_REQUESTS=500

# ============================================================================
# FILESYSTEM CONFIGURATION
# ============================================================================

FILESYSTEM_DISK=local

# AWS S3 Configuration (opsiyonel)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
AWS_ENDPOINT=
AWS_URL=

# BunnyCDN Storage Configuration (önerilen)
BUNNYCDN_STORAGE_KEY=
BUNNYCDN_STORAGE_SECRET=
BUNNYCDN_STORAGE_REGION=ny
BUNNYCDN_STORAGE_ZONE=
BUNNYCDN_STORAGE_URL=
BUNNYCDN_STORAGE_ENDPOINT=https://storage.bunnycdn.com

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================

AUTH_GUARD=web
AUTH_MODEL=App\Models\User
AUTH_PASSWORD_BROKER=users
AUTH_PASSWORD_RESET_TOKEN_TABLE=password_reset_tokens
AUTH_PASSWORD_TIMEOUT=10800

# ============================================================================
# MODULE CONFIGURATION
# ============================================================================

MODULE_AUTH_ENABLED=true
MODULE_BLOG_ENABLED=true
MODULE_CMS_ENABLED=true
MODULE_CRM_ENABLED=true
MODULE_MEDIA_ENABLED=true
MODULE_SETTINGS_ENABLED=true
MODULE_ECOMMERCE_ENABLED=false

# ============================================================================
# PULSE CONFIGURATION (Laravel Pulse - Monitoring)
# ============================================================================

PULSE_ENABLED=true
PULSE_DOMAIN=
PULSE_PATH=pulse
PULSE_STORAGE_DRIVER=database

# ============================================================================
# HORIZON CONFIGURATION (Queue Dashboard)
# ============================================================================

HORIZON_NAME=
HORIZON_DOMAIN=
HORIZON_PATH=horizon
HORIZON_PREFIX=

# ============================================================================
# SCOUT CONFIGURATION (Search)
# ============================================================================

# Meilisearch
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://127.0.0.1:7700
MEILISEARCH_KEY=

# ============================================================================
# VITE CONFIGURATION (Frontend Build Tool)
# ============================================================================

VITE_APP_NAME="${APP_NAME}"

# ============================================================================
# DEBUGBAR CONFIGURATION (Development Only)
# ============================================================================

DEBUGBAR_ENABLED=true
DEBUGBAR_EDITOR=
DEBUGBAR_LOCAL_SITES_PATH=
DEBUGBAR_OPEN_STORAGE=


# ============================================================================
# REDIS QUEUE CONFIGURATION (Queue için ayrı connection)
# ============================================================================

# Queue için ayrı Redis connection (güvenlik için)
# ÖNEMLİ: Queue database'inde eviction policy "noeviction" olmalı!
REDIS_QUEUE_HOST=127.0.0.1
REDIS_QUEUE_PASSWORD=null
REDIS_QUEUE_PORT=6379
REDIS_QUEUE_DB=2
REDIS_QUEUE_CONNECTION=queue
REDIS_QUEUE_URL=

